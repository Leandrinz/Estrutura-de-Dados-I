//  Introdução à Complexidade de Algoritmos - tempo linear
#include <stdio.h>

struct estudante
{
    char nome[50];
    float nota1;
    float nota2;
    float nota3;
};

int main(){
    int n;
    printf("Informe o valor de n:\n");
    scanf("%d", &n);
    int i;
    for (i = 0; i < n; i++){ // O tempo de execução cresce de forma diretamente proporcional ao tamanho da entrada 'n'.
        struct estudante e;
        scanf("%s %f %f", e.nome, &e.nota1, &e.nota2, &e.nota3);
        float media = (e.nota1 + e.nota2 + e.nota3) / 3;
        printf("%s:%.2f\n", e.nome, media);
    }
    return 0;
}
// Resumo: Quanto maior o N, maior o número de vezes que o for executa, sendo assim, maior o tempo de execução.
// O for é oq impacta mais na complexidade